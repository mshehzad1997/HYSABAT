@model HYSABAT.Models.ViewModel.DashBoardFeatures

@{
    ViewData["Title"] = "CreateFutures";
}

<h1>CreateFutures</h1>

<h4>DashBoardFeatures</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data"asp-controller="Features" asp-action="CreateFutures" method="post" class="CreateFeatures" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="ImageFile" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File</label>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <label asp-for="Dashboards" class="control-label"></label>
                <div>
                    <input asp-for="Dashboards" class="form-control" />
                    <span asp-validation-for="Dashboards" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @section Scripts{ 
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                })
            </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

